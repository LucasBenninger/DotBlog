<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bulma/css/bulma.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
</head>
<body class="container">
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    DotBlog
                </h1>
                <h2 class="subtitle">Blog Software written on the dotnet core framework</h2>
            </div>
        </div>
        <div class="hero-footer">
            <nav class="navbar">
                <div class="navbar-brand">
                </div>
                <div class="navbar-start">
                    <a class="navbar-item" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <a class="navbar-item" asp-controller="Home" asp-action="About">About</a>
                </div>
                <div class="navbar-end">
                    <a asp-controller="Blog" asp-action="Create" class="navbar-item">Create Post</a>
                    <a href="" class="navbar-item">Logout</a>
                </div>
            </nav>
        </div>
    </section>
    @RenderBody()
</body>
</html>