@model DotBlog.Models.Post

    <h1 class="title">Create A New Blog Post</h1>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="field">
        <label asp-for="Title" class="label"></label>
        <input asp-for="Title" class="input" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="field">
        <label asp-for="Subtitle" class="label"></label>
        <input asp-for="Subtitle" class="input" />
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>
    <div class="field">
        <label asp-for="Content" class="label"></label>
        <textarea  asp-for="Content" class="input" ></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="field">
        <input type="submit" value="Create" class="button is-primary" />
    </div>
</form>

